<manifest package="com.e16din.sc"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <receiver
            android:name=".RefreshReceiver"
            android:enabled="true"
            android:exported="false"/>

        <activity
            android:name=".activities.StartActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.ScreenHolderActivity"/>

        <activity
            android:name=".activities.LandscapeHolderActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".activities.PortraitHolderActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
