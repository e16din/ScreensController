<manifest package="com.e16din.sc"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission
        android:name="android.permission.SYSTEM_ALERT_WINDOW"
        tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <receiver
            android:name=".RefreshReceiver"
            android:enabled="true"
            android:exported="false"/>

        <activity
            android:name=".activities.StartActivity"
            android:theme="@style/ScNoBarAppTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".activities.ScreenHolderActivity"/>

        <activity
            android:name=".activities.LockScreenHolderActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".activities.LandscapeHolderActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".activities.PortraitHolderActivity"
            android:screenOrientation="portrait"/>

        <service
            android:name=".services.ProgressBarService"
            android:enabled="true"
            android:exported="false"/>

        <service
            android:name=".services.LockScreenService"
            android:enabled="true"
            android:exported="false"/>

    </application>

</manifest>
